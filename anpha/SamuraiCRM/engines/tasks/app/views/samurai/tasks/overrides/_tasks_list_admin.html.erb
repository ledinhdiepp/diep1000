<div class="panel panel-primary">
    <div class="panel-heading">
        Last 3 tasks
    </div>

    <table class="table">
        <thead>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Created at</th>
        </thead>
        <tbody>
            <%- Samurai::Tasks::Task.limit(3).each do |task| %>
                <tr>
                    <td><%= task.id %></td>
                    <td><%= task.title %>
                    <td><%= task.content %></td>
                    <td><%= task.created_at.strftime("%d %b. %Y") %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="panel-body text-center">
        <%= link_to '...', samurai.admin_tasks_path %>
    </div>
</div>